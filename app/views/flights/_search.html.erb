<div class="flight-index">
    <h1>Find your next chariot!</h1>
    <div class="search-container">

        <p>Search for flights</p>
        <%= form_with url: "/flights", method: :get,  class: "pure-form flight-search" do |form| %>
            <div clas="search-fields">
                <%= form.select(:num_of_passengers, options_for_select(1..4) ) %>
                <%= form.select(:departure_airport, options_for_select(@departure_airports)) %>
                <%= form.select(:arrival_airport, options_for_select(@arrival_airports)) %>
                
            </div>
            <div class="search-btn">
                <%= form.submit "Search", :class => 'pure-button' %>
            </div>
        
        <% end %>
    </div>
</div>
